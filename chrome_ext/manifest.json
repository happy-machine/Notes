{
  "manifest_version": 2,
  "name": "Notes",
  "version": "1.0",
  "description": "Don't forget, use Notes!",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

"browser_action": {
   "default_icon": "tab-icon.png",
   "default_title": "Notes",
   "default_popup": "popup.html"
 }
}
